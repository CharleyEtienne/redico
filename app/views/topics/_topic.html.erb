<div class="col-sm-6">
  <div class="card">
    <div class="card-header">
      <%= topic.title %> <span class="badge badge-secondary"> <%= topic.finished? ? "Terminé" : "En cours" %> </span> <br/>
      <small>Proposé par : <strong><%= topic.user.login %></strong>, <%= time_ago_in_words(topic.created_at) %> </small>
      <p class="float-right">
        <%= link_to '<span aria-hidden="true">&times;</span>'.html_safe, topic, class: "close", method: :delete, data: {confirm: 'Are you sure?'} %>
      </p>
    </div>
    <div class="card-body">
      <blockquote class="blockquote">
        <p class="lead"><%= topic.description %></p>
      </blockquote>
    </div>
    <div class="card-footer text-muted">
      <%= link_to "Découvrir", topic, class: "btn btn-block btn-secondary" %>
    </div>
  </div>
  <br/>
</div>